<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.donal.totalsapplication.HomePage">

    <ImageView
        android:id="@+id/run_imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:layout_toLeftOf="@+id/account_drawable"
        android:layout_toStartOf="@+id/account_drawable"
        android:onClick="addRunDistance"
        android:src="@drawable/run_icon" />

    <TextView
        android:id="@+id/runTextView"
        style="@style/text_colour_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/run_imageView"
        android:layout_alignStart="@+id/run_imageView"
        android:layout_below="@+id/run_imageView"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/runDistance"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/cycle_imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/run_imageView"
        android:layout_toEndOf="@+id/account_drawable"
        android:layout_toRightOf="@+id/account_drawable"
        android:onClick="addCycleDistance"
        android:src="@drawable/cycle_icon" />

    <TextView
        android:id="@+id/cycleTextView"
        style="@style/text_colour_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cycle_imageView"
        android:layout_alignStart="@+id/cycle_imageView"
        android:layout_below="@+id/cycle_imageView"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/cycleDistance"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/account_drawable"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_name" />

    <ImageView
        android:id="@+id/swim_imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/account_drawable"
        android:layout_centerHorizontal="true"
        android:onClick="addSwimDistance"
        android:src="@drawable/swim_icon"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/swimTextView"
        style="@style/text_colour_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swim_imageView"
        android:layout_centerHorizontal="true"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/runDistance"
        android:textSize="20sp" />

</RelativeLayout>
